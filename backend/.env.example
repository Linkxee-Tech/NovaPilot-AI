# Core App
PROJECT_NAME=NovaPilot AI
API_V1_STR=/api/v1
ENV=development
DEMO_MODE=false

# Security
SECRET_KEY=change-me-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ENCRYPTION_KEY=replace-with-valid-fernet-key
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Upload Controls
MAX_UPLOAD_SIZE_MB=15

# Database (choose one)
USE_SQLITE=true
DATABASE_URL=sqlite:///./sql_app.db
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=novapilot

# Queue / Cache
REDIS_URL=redis://localhost:6379/0

# AWS / Bedrock
USE_AWS_SECRETS=false
AWS_SECRET_NAME=novapilot/production
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_PROFILE=
NOVA_TEXT_MODEL_ID=amazon.nova-pro-v1:0
NOVA_ACT_MODEL_ID=us.amazon.nova-pro-act-v1:0

# Storage / Monitoring
S3_BUCKET_NAME=novapilot-media
XRAY_ENABLED=false
